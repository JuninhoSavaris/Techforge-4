Exercicio 1

// Interface Produto
interface Produto {
  id: number;
  nome: string;
  preco: number;
}

// Classe que implementa a interface
class ItemLoja implements Produto {
  id: number;
  nome: string;
  preco: number;

  constructor(id: number, nome: string, preco: number) {
    this.id = id;
    this.nome = nome;
    this.preco = preco;
  }
}

// Exemplo de uso
const item = new ItemLoja(1, "Camiseta", 49.90);
console.log(item);


Exercico 2

// Interface Documento
interface Documento {
  titulo: string;
  conteudo: string;
}

// Classe que implementa a interface
class Texto implements Documento {
  titulo: string;
  conteudo: string;

  constructor(titulo: string, conteudo: string) {
    this.titulo = titulo;
    this.conteudo = conteudo;
  }

  exibir(): string {
    return `TÃ­tulo: ${this.titulo}, ConteÃºdo: ${this.conteudo}`;
  }
}

// Exemplo de uso
const documento = new Texto("Contrato", "Este documento oficializa o acordo.");
console.log(documento.exibir());


Exercicio 3

// Interface ProdutoLoja
interface ProdutoLoja {
  codigo: number;
  nome: string;
}

// Classe Loja
class Loja {
  private produtos: ProdutoLoja[];

  constructor() {
    this.produtos = [];
  }

  // MÃ©todo para adicionar produtos (opcional, mas Ãºtil)
  adicionarProduto(produto: ProdutoLoja): void {
    this.produtos.push(produto);
  }

  // MÃ©todo para buscar produto pelo cÃ³digo
  buscarProdutoPorCodigo(codigo: number): ProdutoLoja | undefined {
    return this.produtos.find(produto => produto.codigo === codigo);
  }
}

// Exemplo de uso
const loja = new Loja();

loja.adicionarProduto({ codigo: 1, nome: "Teclado" });
loja.adicionarProduto({ codigo: 2, nome: "Mouse" });
loja.adicionarProduto({ codigo: 3, nome: "Monitor" });

console.log(loja.buscarProdutoPorCodigo(2)); // { codigo: 2, nome: "Mouse" }
console.log(loja.buscarProdutoPorCodigo(99)); // undefined


Exercicio 4

// Interface Livro
interface Livro {
  titulo: string;
  autor: string;
  disponivel: boolean;
}

// Classe Biblioteca
class Biblioteca {
  private livros: Livro[];

  constructor() {
    this.livros = [];
  }

  // MÃ©todo opcional para adicionar livros
  adicionarLivro(livro: Livro): void {
    this.livros.push(livro);
  }

  // MÃ©todo que retorna apenas livros disponÃ­veis
  buscarLivrosDisponiveis(): Livro[] {
    return this.livros.filter(livro => livro.disponivel === true);
  }
}

// Exemplo de uso
const biblioteca = new Biblioteca();

biblioteca.adicionarLivro({ titulo: "Dom Casmurro", autor: "Machado de Assis", disponivel: true });
biblioteca.adicionarLivro({ titulo: "O Hobbit", autor: "J.R.R. Tolkien", disponivel: false });
biblioteca.adicionarLivro({ titulo: "1984", autor: "George Orwell", disponivel: true });

console.log(biblioteca.buscarLivrosDisponiveis());
// Output esperado: [
//   { titulo: "Dom Casmurro", autor: "Machado de Assis", disponivel: true },
//   { titulo: "1984", autor: "George Orwell", disponivel: true }
// ]

Exercicio 5

// Interface LivroBiblioteca
interface LivroBiblioteca {
  titulo: string;
  autor: string;
  genero: string;
  disponivel: boolean;
}

// Classe BibliotecaGestao
class BibliotecaGestao {
  private livros: LivroBiblioteca[];

  constructor() {
    this.livros = [];
  }

  // MÃ©todo opcional para adicionar livros
  adicionarLivro(livro: LivroBiblioteca): void {
    this.livros.push(livro);
  }

  // 1ï¸âƒ£ Filtrar por gÃªnero
  filtrarPorGenero(genero: string): LivroBiblioteca[] {
    return this.livros.filter(livro => livro.genero.toLowerCase() === genero.toLowerCase());
  }

  // 2ï¸âƒ£ Buscar por autor
  buscarPorAutor(autor: string): LivroBiblioteca[] {
    return this.livros.filter(livro => livro.autor.toLowerCase() === autor.toLowerCase());
  }

  // 3ï¸âƒ£ Retornar livros disponÃ­veis ordenados alfabeticamente pelo tÃ­tulo
  obterLivrosDisponiveisOrdenados(): LivroBiblioteca[] {
    return this.livros
      .filter(livro => livro.disponivel)
      .sort((a, b) => a.titulo.localeCompare(b.titulo));
  }
}

// Exemplo de uso
const sistema = new BibliotecaGestao();

sistema.adicionarLivro({ titulo: "Dom Casmurro", autor: "Machado de Assis", genero: "Romance", disponivel: true });
sistema.adicionarLivro({ titulo: "1984", autor: "George Orwell", genero: "Distopia", disponivel: false });
sistema.adicionarLivro({ titulo: "O Hobbit", autor: "J.R.R. Tolkien", genero: "Fantasia", disponivel: true });
sistema.adicionarLivro({ titulo: "O Senhor dos AnÃ©is", autor: "J.R.R. Tolkien", genero: "Fantasia", disponivel: true });

console.log("ðŸ“š Fantasia:", sistema.filtrarPorGenero("Fantasia"));
console.log("ðŸ‘¤ Tolkien:", sistema.buscarPorAutor("J.R.R. Tolkien"));
console.log("âœ” DisponÃ­veis ordenados:", sistema.obterLivrosDisponiveisOrdenados());
